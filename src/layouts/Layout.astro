---
// Var for title change
const title = Astro.props.title;

// Import components
import Header from '../../src/components/header.astro';
import Footer from '../components/footer.astro';
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<meta name="description" content="CinePedia es una plataforma para encontrar información sobre películas y series." />
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-E4RSGCCJX9"></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
				gtag('js', new Date());

				gtag('config', 'G-E4RSGCCJX9');
		</script>
	</head>
	<body>
		<Header />
			<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>

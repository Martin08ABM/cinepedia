---
import "../styles/global.css";
import Layout from '../layouts/Layout.astro';

import {peliculas} from "../films/arrayFilms.js"
--- 
<Layout title="Inicio - CinePedia">
    <main>
        <div class="mt-6">
            <h1 class="inline-flex ml-10 text-3xl font-bold">CinePedia <img src="/flecha-correcta.svg" class="w-6 mt-1 ml-2 mr-2"> La enciclopedia del cine</h1>
        </div>
        <div id="content">
            <section>
                <h2 class="text-2xl font-bold mt-10 ml-16">Últimas películas añadidas</h2>
                <div class="grid grid-cols-1 p-5 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-4 ml-25">
                    {peliculas.map((film) => (
                        <div class="bg-white shadow-md rounded-lg overflow-hidden">
                            <img class="w-full h-56 object-cover" src={film.image} alt={film.title} />
                            <div class="p-4">
                                <h3 class="font-bold text-2xl mb-2">{film.title}</h3>
                                <p class="text-gray-700 text-base">{film.category}</p>
                                <p class="text-gray-700 text-base">{film.description}</p>
                            </div>
                        </div>
                    ))}
                </div>
            </section>
        </div>
    </main>
</Layout>

---
import "../../styles/global.css"
import Layout from "../../layouts/Layout.astro"
import { dunkerque } from "../../assets/sinopsis/dunkerque.js"
---
<Layout title="Dunkerque - CinePedia">
    <main class="px-6 py-10 md:flex md:space-x-10">
        <div class="md:w-1/2 flex flex-col items-center">
        <img src="/Films-Images/dunkerque.jpg" alt="Dunkerque" class="rounded-2xl w-full max-w-sm shadow-lg">
        <div class="flex gap-4 mt-6">
            <a href="https://www.primevideo.com/dp/amzn1.dv.gti.e8afa84c-5903-3c19-7f53-a10540d1503c?autoplay=0&ref_=atv_cf_strg_wb" target="_blank" rel="noopener noreferrer" class="border-2 rounded-2xl px-4 py-2 hover:bg-black hover:text-white transition-all">Ver en Prime Video</a>
            <a href="https://www.movistarplus.es/cine/dunkerque/ficha?tipo=E&id=1455178&origen=GGL&referrer=GGL&utm_campaign=product_feed&utm_medium=aggregator&utm_source=google" target="_blank" rel="noopener noreferrer" class="border-2 rounded-2xl px-4 py-2 hover:bg-black hover:text-white transition-all">Ver en Movistar+</a>
        </div>
        </div>

        <div class="md:w-1/2 mt-10 md:mt-0">
        <h2 class="text-3xl font-bold mb-4">Dunkerque</h2>
        <ul class="mb-6">
            <li class="text-lg font-medium">Director: Christopher Nolan</li>
            <li class="text-lg font-medium">AÃ±o: 2017</li>
        </ul>

        {dunkerque.map((d) => (
            <div>
            <h3 class="text-xl font-bold mb-2">Actores:</h3>
            <ul class="ml-4 mb-6">
                <li class="text-base">{d.actor1}</li>
                <li class="text-base">{d.actor2}</li>
                <li class="text-base">{d.actor3}</li>
                <li class="text-base">{d.actor4}</li>
            </ul>

            <h3 class="text-xl font-bold mb-2">Sinopsis:</h3>
            <p class="text-base leading-relaxed text-gray-800">{d.sinopsis}</p>
            </div>
        ))}
        </div>
    </main>
</Layout>